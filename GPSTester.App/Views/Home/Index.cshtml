@{
    ViewData["Title"] = "Home Page";
}

@model GPSTester.App.Models.LocationModel
@using (Html.BeginForm("Move", "Home", FormMethod.Post))
{
    @Html.TextBoxFor(model => model.FileLocation, new {@Value = "Location.gpx"})
    @Html.ValidationMessageFor(model => model.FileLocation)
    <table style="width:100%;">
        <tr>
            <td>&nbsp;</td>
            <td><button class="btn btn-default btn-lg" type="submit" name="submitButton" value="north">North</button></td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td><button class="btn btn-default btn-lg" type="submit" name="submitButton" value="west">West</button></td>
            <td><button class="btn btn-default btn-lg" type="submit" name="submitButton" value="stop">Stop</button></td>
            <td><button class="btn btn-default btn-lg" type="submit" name="submitButton" value="east">East</button></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><button class="btn btn-default btn-lg" type="submit" name="submitButton" value="south">South</button></td>
            <td>&nbsp;</td>
        </tr>
    </table>
}
